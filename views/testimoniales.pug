extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}
        //- p= JSON.stringify(testimoniales)
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        .row.testimoniales
            each testimonial in testimoniales
                .col-md-6.col-lg-4.mb-4
                    .card
                        .card-body
                            blockquote.blockquote
                            p.mb-0
                                | #{testimonial.mensaje}
                            footer.blockquote-footer
                                | #{testimonial.nombre}
        .row
            .col-md-12
                h2.d-block.w-100.text-center Agrega un Testimonio
                //- p= JSON.stringify(errores)
                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre.form-control(type="text", placeholder="Tu Nombre", name="nombre", value= nombre)
                        .form-group
                            label(for="correo") Correo Electrónico
                            input#correo.form-control(type="text", placeholder="Tu Correo", name="correo", value= correo)
                        .form-group
                            label(for="mensaje") Correo Electrónico
                            textarea#mensaje.form-control(name="mensaje", placeholder="Tu Mensaje", rows= 4)= mensaje

                        input.btn.py-2.btn-success.btn-block(type="submit", value="enviar")
                        


